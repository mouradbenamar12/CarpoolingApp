<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="com.example.mourad.navigationandroid.Login">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="96dp"
        android:layout_height="98dp"
        android:layout_marginBottom="466dp"
        android:layout_marginEnd="223dp"
        android:layout_marginStart="41dp"
        android:layout_marginTop="76dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.073"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.167"
        app:srcCompat="@drawable/logo"
        tools:ignore="ContentDescription" />

    <EditText
        android:id="@+id/et_email"
        android:layout_width="275dp"
        android:layout_height="65dp"
        android:layout_marginEnd="236dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/user_input"
        android:ems="10"
        android:hint="@string/username"
        android:inputType="textPersonName"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo" />

    <EditText
        android:id="@+id/forgot_email"
        android:layout_width="275dp"
        android:layout_height="65dp"
        android:layout_marginEnd="236dp"
        android:background="@drawable/user_input"
        android:ems="10"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_email" />

    <Button
        android:id="@+id/btnSignIn"
        android:layout_width="315dp"
        android:layout_height="61dp"
        android:layout_marginBottom="136dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/login2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.188"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/forgot_email"
        app:layout_constraintVertical_bias="0.016" />

    <ImageView
        android:id="@+id/log_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toStartOf="@+id/et_email"
        app:layout_constraintHorizontal_bias="0.153"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        app:srcCompat="@drawable/user_icon"
        tools:ignore="ContentDescription" />

    <Button
        android:id="@+id/forget_psw"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginBottom="300dp"
        android:layout_marginStart="436dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:onClick="btnForgot"
        android:text="@string/forgot_your_password"
        android:textAllCaps="?android:attr/windowOverscan"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSignIn"
        app:layout_constraintVertical_bias="0.446"
        tools:targetApi="jelly_bean_mr2" />

    <Button
        android:id="@+id/signUp"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginBottom="88dp"
        android:layout_marginEnd="60dp"
        android:background="@android:color/transparent"
        android:onClick="btnSignUp"
        android:text="@string/signup_now"
        android:textAllCaps="?android:attr/windowSwipeToDismiss"
        android:textIsSelectable="false"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:targetApi="kitkat_watch" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginEnd="2dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toStartOf="@+id/forgot_email"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/log_icon"
        app:srcCompat="@drawable/pass_icon"
        tools:ignore="ContentDescription" />

</android.support.constraint.ConstraintLayout>
