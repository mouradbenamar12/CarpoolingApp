<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mourad.navigationandroid.AccountFragment"
    android:background="?attr/bg_my_account"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="?attr/bg_tof_account"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profilephoto_acc"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
            android:background="@null"
            android:src="@drawable/placeholder" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="20dp"
        android:layout_marginTop="35dp">

        <LinearLayout
            android:orientation="horizontal"
            android:paddingStart="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="RtlSymmetry">
            <ImageView
                android:layout_width="36dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_person_black_24dp"
                tools:ignore="ContentDescription" />
            <EditText
                android:id="@+id/et_fullName_acc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/user_input"
                android:layout_gravity="center_vertical"
                android:paddingStart="20dp"
                android:hint="@string/full_name"
                android:inputType="textPersonName" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="25dp"
            android:orientation="horizontal"
            android:paddingStart="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="RtlSymmetry">
            <ImageView
                android:paddingTop="3dp"
                android:layout_width="36dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_contact_phone_black_24dp"
                tools:ignore="ContentDescription" />

            <EditText
                android:id="@+id/et_phone_acc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/user_input"
                android:layout_gravity="center_vertical"
                android:paddingStart="20dp"
                android:hint="@string/phone"
                android:inputType="phone"
                tools:ignore="RtlSymmetry" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="25dp"
            android:orientation="horizontal"
            android:paddingStart="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="RtlSymmetry">
            <ImageView
                android:layout_width="36dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_today_black_24dp"
                tools:ignore="ContentDescription" />

            <EditText
                android:id="@+id/birthdayField_acc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:background="@drawable/user_input"
                android:focusable="false"
                android:layout_gravity="center_vertical"
                android:hint="@string/birthday" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="25dp"
            android:orientation="horizontal"
            android:paddingStart="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="RtlSymmetry">
            <ImageView
                android:layout_width="36dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_accessibility_black_24dp"
                tools:ignore="ContentDescription" />

            <Spinner
                android:id="@+id/spinner_acc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:background="@drawable/user_input"
                android:layout_gravity="center_vertical"
                android:textAlignment="center"
                tools:ignore="RtlSymmetry" />

        </LinearLayout>
    </LinearLayout>


    <Button
        android:id="@+id/button2_acc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonstyle"
        android:text="@string/update"
        android:textSize="18sp"
        tools:ignore="RtlHardcoded"
        android:textColor="#fff"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"/>


        <ProgressBar
            android:id="@+id/progressbarUP"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />




</LinearLayout>