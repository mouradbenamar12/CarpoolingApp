<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="25dp"
    tools:context="com.example.mourad.navigationandroid.SettingsFragment">

    <Switch
        android:id="@+id/notifications"
        android:layout_width="241dp"
        android:layout_height="0dp"
        android:layout_marginBottom="13dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="28dp"
        android:text="@string/notifications"
        app:layout_constraintBottom_toTopOf="@+id/change_language"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="365dp"
        android:layout_marginStart="24dp"
        android:background="@drawable/animation_btn2"
        android:text="@string/logout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/change_language" />

    <Button
        android:id="@+id/change_language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="19dp"
        android:background="@drawable/animation_btn"
        android:text="@string/change_language"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toTopOf="@+id/logout"
        app:layout_constraintStart_toStartOf="@+id/notifications"
        app:layout_constraintTop_toBottomOf="@+id/notifications" />
</android.support.constraint.ConstraintLayout>