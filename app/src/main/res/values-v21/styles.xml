<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <!-- Light/Day Mode theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#2196F3</item>
        <item name="colorPrimaryDark">#1976D2</item>
        <item name="colorAccent">#ff4081</item>
        <item name="backgroundcolor">#fcfcfc</item>
        <item name="cardbackground">#ffffff</item>
        <item name="textcolor">#000000</item>
        <item name="tintcolor">#000000</item>
        <item name="buttoncolor">#2196F3</item>
        <item name="bg_nav_header">#009688</item>
        <item name="bg_name">#333300</item>
        <item name="bg_email">#003300</item>
        <item name="bg_NavigationView">#fcfcfc</item>



        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>


        <!-- enable window content transitions . -->
        <item name="android:windowActivityTransitions"
            tools:targetApi="lollipop">true</item>
    </style>

    <!-- Night / dark  Mode theme. -->
    <style name="darktheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#212121</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">#ff4081</item>
        <item name="backgroundcolor">#303030</item>
        <item name="cardbackground">#424242</item>
        <item name="textcolor">#f98602</item>
        <item name="tintcolor">#ffffff</item>
        <item name="buttoncolor">#2196F3</item>
        <item name="bg_nav_header">#000000</item>
        <item name="bg_name">#f98602</item>
        <item name="bg_email">#CC9900</item>
        <item name="bg_NavigationView">#303030</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>

        <!-- enable window content transitions . -->
        <item name="android:windowActivityTransitions"
            tools:targetApi="lollipop">true</item>

    </style>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation" >@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>

    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FacebookLoginButton">

        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

</resources>
